{
	"name": "website-next",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "concurrently \"yarn ssl\" \"next dev -p 3020\"",
		"build": "next build",
		"start": "next start",
		"postbuild": "next-on-netlify",
		"clean:next": "rm -rf .next",
		"clean:node": "rm -rf node_modules",
		"clean": "yarn clean:next && yarn clean:node",
		"ssl": "local-ssl-proxy --source 3030 --target 3020"
	},
	"dependencies": {
		"@chance/hooks": "^0.2.0",
		"@reach/auto-id": "^0.12.1",
		"@reach/skip-nav": "^0.12.1",
		"@reach/utils": "^0.12.1",
		"@reach/visually-hidden": "^0.12.0",
		"@stripe/stripe-js": "^1.11.0",
		"clsx": "^1.1.1",
		"formik": "^2.2.5",
		"lodash": "^4.17.20",
		"micro": "^9.3.4",
		"next": "10.0.3",
		"next-on-netlify": "^2.6.3",
		"next-seo": "^4.17.0",
		"postcss": "^8.2.1",
		"postcss-flexbugs-fixes": "^5.0.2",
		"postcss-preset-env": "^6.7.0",
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"react-spring": "^8.0.27",
		"resize-observer-polyfill": "^1.5.1",
		"sass": "^1.30.0",
		"stripe": "^8.127.0",
		"unfetch": "^4.2.0",
		"yup": "^0.32.6"
	},
	"devDependencies": {
		"@chancedigital/browserslist-config": "^1.0.4",
		"@chancedigital/eslint-config": "^8.0.0",
		"@types/lodash": "^4.14.165",
		"@types/micro": "^7.3.3",
		"@types/node": "^14.14.11",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/react-helmet": "^6.1.0",
		"@typescript-eslint/eslint-plugin": "^4.9.1",
		"@typescript-eslint/parser": "^4.9.1",
		"babel-eslint": "^10.1.0",
		"concurrently": "^5.3.0",
		"eslint": "^7.15.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.1.3",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"eslint-plugin-testing-library": "^3.10.1",
		"local-ssl-proxy": "^1.3.0",
		"prettier": "^2.2.1",
		"typescript": "^4.1.2"
	},
	"prettier": {
		"semi": true,
		"trailingComma": "es5",
		"useTabs": true
	},
	"browserslist": [
		"extends @chancedigital/browserslist-config"
	],
	"eslintConfig": {
		"extends": [
			"@chancedigital",
			"@chancedigital/eslint-config/react",
			"@chancedigital/eslint-config/typescript"
		],
		"rules": {
			"require-await": 0
		}
	},
	"eslintIgnore": [
		"public/**/*"
	],
	"postcss": {
		"plugins": [
			"postcss-flexbugs-fixes",
			[
				"postcss-preset-env",
				{
					"autoprefixer": {
						"flexbox": "no-2009"
					},
					"stage": 1,
					"features": {
						"custom-media-queries": true,
						"custom-properties": false
					}
				}
			]
		]
	}
}
